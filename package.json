{
  "name": "dds-repo-base",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cypress:open": "cross-env NODE_OPTIONS=--openssl-legacy-provider cypress open",
    "cypress:run": "cross-env NODE_OPTIONS=--openssl-legacy-provider cypress run",
    "start:backend": "npm start --workspace=backend",
    "dev:backend": "npm run dev --workspace=backend",
    "start:frontend": "npm start --workspace=frontend",
    "start:dev": "concurrently \"npm run dev:backend\" \"npm run start:frontend\"",
    "lint": "eslint .",
    "format": "prettier . --write",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest packages/backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.1.0",
    "cypress": "^15.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "prettier": "3.6.2"
  }
}
